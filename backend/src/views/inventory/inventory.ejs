<%- include('../partials/usertab.ejs') %>
    <div class="container-fluid">
        <div class="modal fade" id="addphoneprduct" tabindex="-1" aria-labelledby="addphoneproduct" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="makeOrderLabel">Add phone product</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="addphoneproduct">
                            <div class="form-floating mt-3">
                                <select class="form-control" id="phoneCategory" required>
                                    <option value="" disabled selected>Select Category</option>
                                    <option value="smartphone">Smartphone</option>
                                    <option value="buttonphone">Button Phone</option>
                                </select>
                                <label for="phoneCategory">Category</label>
                            </div>
                            <div class="form-floating mt-3">
                                <select class="form-control" id="phonename" required>
                                    <option value="" disabled selected>Select Phone Name</option>
                                </select>
                                <label for="phonename">Phone Name</label>
                            </div>
                            <div class="form-floating mt-3">
                                <select class="form-control" id="brand" required>
                                    <option value="" disabled selected>Select Brand</option>
                                </select>
                                <label for="brand">Brand</label>
                            </div>
                            <div class="form-floating mt-3">
                                <select class="form-control" id="itemModel" required>
                                    <option value="" disabled selected>Select Phone Model</option>
                                </select>
                                <label for="itemModel">Phone Model</label>
                            </div>
                            <div class="form-floating mt-3">
                                <input type="text" class="form-control" id="IMEI" placeholder="Enter phone IMEI"
                                    required />
                                <label for="IMEI">Enter Phone IMEI</label>
                            </div>
                            <div class="form-floating mt-3">
                                <input type="number" class="form-control" id="quantity" value="1" required />
                                <label for="quantity">Quantity</label>
                            </div>
                            <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">
                                Add product
                                <i class="fas fa-spinner fa-spin spinner" id="loadingSpinner"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="addaccessoryprduct" tabindex="-1" aria-labelledby="addaccessoryproductLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="addaccessoryproductLabel">Add accessory product</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="addaccessoryproduct">
                            <div class="form-floating mt-3">
                                <select class="form-control" id="accessorycategory" required>
                                    <option value="" disabled selected>Select category</option>
                                    <option value="phone">Phone</option>
                                    <option value="tablet">Tablet</option>
                                    <option value="laptop">Laptop</option>
                                    <option value="charger">Charger</option>
                                    <option value="headphones">Headphones</option>
                                    <option value="case">Case</option>
                                    <option value="screen_protector">Screen Protector</option>
                                    <option value="cable">Cable</option>
                                    <option value="other">Other</option>
                                </select>
                                <label for="accessorycategory">Category</label>
                            </div>
                            <div class="form-floating mt-3">
                                <select class="form-control" id="accessoryitemName" required>
                                    <option value="" disabled selected>Select item name</option>
                                    <!-- Options will be dynamically populated based on category -->
                                </select>
                                <label for="accessoryitemName">Item Name</label>
                            </div>
                            <div class="form-floating mt-3">
                                <select class="form-control" id="accessorybrand" required>
                                    <option value="" disabled selected>Select brand</option>
                                    <!-- Options will be dynamically populated based on item name -->
                                </select>
                                <label for="accessorybrand">Brand</label>
                            </div>
                            <div class="form-floating mt-3">
                                <select class="form-control" id="accessoryitemModel" required>
                                    <option value="" disabled selected>Select item model</option>
                                    <!-- Options will be dynamically populated based on brand -->
                                </select>
                                <label for="accessoryitemModel">Item Model</label>
                            </div>
                            <div class="form-floating mt-3">
                                <input type="number" class="form-control" id="accessoryquantity" value="1" required />
                                <label for="accessoryquantity">Quantity</label>
                            </div>
                            <button class="w-100 btn btn-lg btn-primary mt-3" type="submit">
                                Add product
                                <i class="fas fa-spinner fa-spin spinner" id="loadingSpinner" style="display: none"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>


